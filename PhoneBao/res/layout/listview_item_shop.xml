<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/shop_head_pic"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="2"
            android:text="阿萨德空间阿三等奖卡拉集散地立刻阿萨德"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/extra_3" />

            <TextView
                android:id="@+id/txt_shop_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="亚太经融店"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="89人付款"
                android:textColor="#B3EE3A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="阳江"
                android:textColor="#B3EE3A"
                android:textSize="12sp" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="bottom" >
			
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="¥ "
              android:textColor="#FF5001"
              android:textSize="12sp"
              android:layout_marginLeft="11dp"/>
          
          <TextView 
              android:id="@+id/txt_price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="793.6"
              android:textColor="#FF5001"
              android:textSize="17sp"/>
          
          <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/extra_ship" />
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="运费：免运费"
              android:textColor="#AB82FF"
              android:textSize="12sp"/>
          
          <TextView 
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="right"
              android:paddingRight="10dp"
              android:text="..."
              android:textColor="#000000"/>
             
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>