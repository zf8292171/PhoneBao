    android:layout_width="match_parent"
    android:background="@drawable/tab_main_grid_content_back"
    android:layout_height="80dp"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/tab_home_grid_content_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="图片显示异常"
        android:layout_gravity="center"/>
    
    <TextView 
        android:id="@+id/tab_home_grid_content_txt"
        android:layout_width="match_parent"
